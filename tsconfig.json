{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "app/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "app/**/*.ts",
    "types/*.d.ts"
  ]
}
